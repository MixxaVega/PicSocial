<h2>Iniciar sesión</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: "Correo electrónico" %>
    <%= f.input :password, required: false, label: "Contraseña" %>
    <%= f.input :remember_me, label: "Recuérdame", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Iniciar sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
