<h2>Regístrate</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, label: "Nombre de usuario" %>
    <%= f.input :email, required: true, label: "Correo electrónico" %>
    <%= f.input :password, required: true, label: "Contraseña", hint: ("#{@minimum_password_length} caracteres mínimos" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: "Confirmación de contraseña" %>
    <%= f.input :avatar, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Regístrate" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
