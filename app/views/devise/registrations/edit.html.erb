<h2>Editar usuario</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: "Correo electrónico" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmación por: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :username, label: "Nombre de usuario" %>
    <%= f.input :avatar, as: :file %>
    <%= f.input :password, label: "Contraseña", hint: "Déjalo en blanco si no quieres cambiarla", required: false %>
    <%= f.input :password_confirmation, label: "Confirmación de contraseña", required: false %>
    <%= f.input :current_password, label: "Contraseña actual", hint: "Necesitamos su contraseña actual para confirmar los cambios", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿Descontento? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
