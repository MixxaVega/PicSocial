.comment.clearfix
	.comment_content
		%p.comment_name
			%strong
				= comment.user.username     
		%p.comment_body
			= comment.body
		%p.comment_title
			Hace
			= time_ago_in_words(comment.created_at)
		%p
	.col.md-6
		.btn.pull-right
			-if user_signed_in?
				-if current_user.id==comment.user.id
					= link_to "Eliminar", [comment.pic, comment], method: :delete, class: "btn btn-danger btn-xs", data: {confirm: 'Â¿Seguro?'}
