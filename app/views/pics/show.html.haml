#pic_show.row
	.col-md-6.col-md-offset-3
		.panel.panel-default
			.panel.heading.pic_image
				= image_tag @pic.image.url
			.panel-body
				%h1= @pic.title
				%p= @pic.description

			.panel-footer
				.row
					.col-md-6
						%p.user
							by
							= link_to @pic.user.username, users_index_path(:user => @pic.user.username)

					.col.md-6
						.btn-group.pull-right
							= link_to like_pic_path(@pic), method: :put, class: "btn btn-default" do 
								%span.glyphicon.glyphicon-thumbs-up
								= @pic.get_upvotes.size

							= link_to dislike_pic_path(@pic), method: :put, class: "btn btn-default" do 
								%span.glyphicon.glyphicon-thumbs-down
								= @pic.get_downvotes.size
							%br
							-if user_signed_in?
								-if current_user.username==@pic.user.username
									=link_to "Editar", edit_pic_path, class: "btn btn-info"
									=link_to "Eliminar", pic_path, method: :delete, data: { confirm: "Est√°s seguro?"}, class: "btn btn-danger"