= simple_form_for @pic, html: { multipart: true} do |f|
	.form-group
		%center
		-if @option==1
			=image_tag "", id: "pic_preview", width: '50%'
			=f.input :image, label: "Imagen",  required: true
	.form-group
		=f.input :title, label: "Título", input_html: {class: 'form-control', autocomplete: "off"}, hint: "Máximo 50 caracteres", required: true
	.form-group
		=f.input :description, label:"Descripción", input_html: {class: 'form-control', autocomplete: "off"}, hint: "Máximo 300 caracteres"

	=f.button :submit, "Aceptar",class: "btn btn-info"

	:javascript
		$('#pic_image').change( function(event) {
			var tmppath = URL.createObjectURL(event.target.files[0]);
			$('#pic_preview').attr('src', tmppath);
		});